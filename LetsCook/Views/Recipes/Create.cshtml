@model CreateRecipeFormModel

@{
    ViewData["Title"] = "Create Recipe";
}

<div class="container">
    <div class="row">
        <div clas"offset-lg-2 col-lg-8 col-xs-12">
            <h4 class="heading-margin">Recipe details</h4>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Liona's  apple pie">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Tell us about your recipe"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="row g-6">
                    <div class="form-group col-4">
                        <label asp-for="PreparationTime"></label>
                        <input asp-for="PreparationTime" class="form-control">
                        <span asp-validation-for="PreparationTime" class="small text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="CookingTime"></label>
                        <input asp-for="CookingTime" class="form-control">
                        <span asp-validation-for="CookingTime" class="small text-danger"></span>

                    </div>
                    <div class="form-group col-4">
                        <label asp-for="RestTime"> </label>
                        <input asp-for="RestTime" class="form-control">
                        <span asp-validation-for="RestTime" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Servings"></label>
                    <input asp-for="Servings" class="form-control" placeholder="1">
                    <span asp-validation-for="Servings" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option selected>Please select one</option>
                        @foreach (var category in @Model.Categories)
                        {
                            <option value=@category.Id>@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CuisineId"></label>
                    <select asp-for="CuisineId" class="form-control">
                        <option selected>Please select one</option>
                        @foreach (var cuisine in @Model.Cuisines)
                        {
                            <option value=@cuisine.Id>@cuisine.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="DifficultyId"></label>
                    <select asp-for="DifficultyId" class="form-control">
                        <option selected>Please select one</option>
                        @foreach (var diff in @Model.Difficulties)
                        {
                            <option value=@diff.Id>@diff.Name</option>
                        }
                    </select>
                </div>
                <input class="btn btn-success float-end" type="submit" value="Create">
            </form>
        </div>
    </div>
</div>